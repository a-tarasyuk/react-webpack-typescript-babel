{
  "name": "react-webpack-typescript-babel",
  "version": "1.0.0",
  "description": "A sample setup using React, Webpack and Babel to build TypeScript code, and using TypeScript for type-checking.",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "webpack --progress --mode=production",
    "start": "webpack s --config ./webpack.config.js --mode=development",
    "start:prod": "npm run build && http-server dist -p 9999 -o"
  },
  "author": {
    "name": "Oleksandr T.",
    "email": "oleksandr.tarasiuk@outlook.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.17.5",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "7.17.3",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "babel-loader": "8.2.3",
    "fork-ts-checker-webpack-plugin": "7.2.1",
    "html-webpack-plugin": "5.5.0",
    "http-server": "14.1.0",
    "typescript": "4.6.2",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.4"
  },
  "dependencies": {
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.13",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
